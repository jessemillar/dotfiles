function search() {
	grep -rin --exclude-dir={vendor,node_modules,bower_components} . -e $1
}

function scuttle() {
	docker kill $(docker ps -a -q) || true
	docker rm $(docker ps -a -q) || true
}

function sink() {
	docker rmi $(docker images -q) || true
}

function gitt() {
	if [ -z "$1" ]
	then
		echo "No commit message supplied"
	else
		git add -A
		git commit -m $1
		git push
	fi
}
