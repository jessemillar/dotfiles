# reload config
shift + cmd - r : khd -e "reload"; brew services restart chunkwm

# open terminal
cmd + shift - return : open -na Kitty

# open a browser
cmd + shift - f : open -a "Firefox"

# open google chrome to view walmart order details
cntrl + shift - d : open -a "Google Chrome" "http://prod-self-help-tool.cloud.walmart.com/gif-store-self-help-tool/od/orderDetails.html?order=$(pbpaste)&country=us"

# bring up a rubber duck friend
cmd + shift - d : osascript -e 'quit app "Duck"' && open -na Duck

# enable "app mode" screenshots
cntrl + shift - 4 -> : chunkc border::clear
cntrl + shift - 6 -> : chunkc border::clear

# spotify mouse controls
alt - button3 : spotify prev
alt - button4 : spotify next

# focus window
cmd + alt - h : chunkc tiling::window --focus west
cmd + alt - j : chunkc tiling::window --focus south
cmd + alt - k : chunkc tiling::window --focus north
cmd + alt - l : chunkc tiling::window --focus east

# equalize size of windows
shift + alt - 0 : chunkc tiling::desktop --equalize

# swap window
cmd + alt + shift - h : chunkc tiling::window --swap west
cmd + alt + shift - j : chunkc tiling::window --swap south
cmd + alt + shift - k : chunkc tiling::window --swap north
cmd + alt + shift - l : chunkc tiling::window --swap east

# move window
cmd + shift - h : chunkc tiling::window --warp west
cmd + shift - j : chunkc tiling::window --warp south
cmd + shift - k : chunkc tiling::window --warp north
cmd + shift - l : chunkc tiling::window --warp east

# send window to desktop
shift + cmd + cntrl - x : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop)
shift + cmd + cntrl - z : chunkc tiling::window --send-to-desktop prev
shift + cmd + cntrl - c : chunkc tiling::window --send-to-desktop next
shift + cmd + cntrl - 1 : chunkc tiling::window --send-to-desktop 1
shift + cmd + cntrl - 2 : chunkc tiling::window --send-to-desktop 2
shift + cmd + cntrl - 3 : chunkc tiling::window --send-to-desktop 3
shift + cmd + cntrl - 4 : chunkc tiling::window --send-to-desktop 4
shift + cmd + cntrl - 5 : chunkc tiling::window --send-to-desktop 5
shift + cmd + cntrl - 6 : chunkc tiling::window --send-to-desktop 6
shift + cmd + cntrl - 7 : chunkc tiling::window --send-to-desktop 7
shift + cmd + cntrl - 8 : chunkc tiling::window --send-to-desktop 8
shift + cmd + cntrl - 9 : chunkc tiling::window --send-to-desktop 9
shift + cmd + cntrl - 0 : chunkc tiling::window --send-to-desktop 10

# send window to desktop and switch desktop
shift + cmd - x : `id=$(chunkc get _last_active_desktop); chunkc tiling::window -d $id; khd -p "cntrl + alt - $id" &> /dev/null`
shift + cmd - button3 : chunkc tiling::window -d prev; khd -p "cntrl + alt - z"
shift + cmd - button4 : chunkc tiling::window -d next; khd -p "cntrl + alt - c"
shift + cmd - z : chunkc tiling::window -d prev; khd -p "cntrl + alt - z"
shift + cmd - c : chunkc tiling::window -d next; khd -p "cntrl + alt - c"
shift + cmd - 1 : chunkc tiling::window -d 1; khd -p "cmd - 1"
shift + cmd - 2 : chunkc tiling::window -d 2; khd -p "cmd - 2"
shift + cmd - 3 : chunkc tiling::window -d 3; khd -p "cmd - 3"
shift + cmd - 4 : chunkc tiling::window -d 4; khd -p "cmd - 4"
shift + cmd - 5 : chunkc tiling::window -d 5; khd -p "cmd - 5"
shift + cmd - 6 : chunkc tiling::window -d 6; khd -p "cmd - 6"
shift + cmd - 7 : chunkc tiling::window -d 7; khd -p "cmd - 7"
shift + cmd - 8 : chunkc tiling::window -d 8; khd -p "cmd - 8"
shift + cmd - 9 : chunkc tiling::window -d 9; khd -p "cmd - 9"
shift + cmd - 0 : chunkc tiling::window -d 10; khd -p "cmd - 0"

# switch to last active desktop
cntrl + alt - x : `id=$(chunkc get _last_active_desktop); khd -p "cntrl + alt - $id" &> /dev/null`

# focus monitor
- button3 : chunkc tiling::monitor -f prev
- button4 : chunkc tiling::monitor -f next
cmd + alt - z : chunkc tiling::monitor -f prev
cmd + alt - c : chunkc tiling::monitor -f next
cmd + alt - 1 : chunkc tiling::monitor -f 1
cmd + alt - 2 : chunkc tiling::monitor -f 2
cmd + alt - 3 : chunkc tiling::monitor -f 3

# send window to monitor and follow focus
shift - button3 : chunkc tiling::window --send-to-monitor prev; chunkc tiling::monitor -f prev
shift - button4 : chunkc tiling::window --send-to-monitor next; chunkc tiling::monitor -f next
shift + cmd + alt - z : chunkc tiling::window --send-to-monitor prev; chunkc tiling::monitor -f prev
shift + cmd + alt - c : chunkc tiling::window --send-to-monitor next; chunkc tiling::monitor -f next
shift + cmd + alt - 1 : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
shift + cmd + alt - 2 : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2
shift + cmd + alt - 3 : chunkc tiling::window --send-to-monitor 3; chunkc tiling::monitor -f 3

# increase region size
shift + alt - h : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west; chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east
shift + alt - j : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south; chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
shift + alt - k : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north; chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
shift + alt - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east; chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

# mirror tree y-axis
alt - y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
alt - x : chunkc tiling::desktop --mirror horizontal

# toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
shift + alt - f : chunkc tiling::window --toggle native-fullscreen

# float / unfloat window
alt - t : chunkc tiling::window --toggle float

# toggle sticky, float and resize to picture-in-picture size
alt - s : chunkc tiling::window --toggle sticky;\
          chunkc tiling::window --warp-floating pip-right

# float next window to be tiled
shift + alt - t : chunkc set window_float_next 1
