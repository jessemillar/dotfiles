# General
alias a="ack"
alias day="date +%m-%d-%Y"
alias h="history"
alias ha="history | ack"
alias lines="wc -l **/* 2>/dev/null"
alias o="open ."
alias pb="pbcopy"
alias pu="" # I'm tired of accidentally typing this
alias research="cd ~/Documents/Projects/todo/research && vim README.md && git add -A && git commit -m 'Automatic research update' && git push ; cd - >/dev/null"
alias s="search"
alias todo="cd ~/Documents/Projects/todo && vim README.md && git add -A && git commit -m 'Automatic todo update' && git push ; cd - >/dev/null"
alias tmp="mkdir tmp || true && cd tmp"
alias v="vim"
alias watch='watch '

# Go
alias gg="go get -v"
alias gun="go run server.go"
alias gin="go install && go run server.go"
alias gest="go test -v -race ./..."

# Node
alias ode="npm install && node main.js"

# Docker
alias dr="docker run"
alias inflate="scuttle && docker-compose build && docker-compose up"
alias inflated="scuttle && docker-compose build && docker-compose up -d"
alias deflate="docker-compose down"

# Pico-8
alias pew="cp ~/Library/Application\ Support/pico-8/carts/blank.p8"
alias pest="/Applications/PICO-8.app/Contents/MacOS/pico8 -run"
alias pun="cd ..; pico-build run; cd src"
alias pud="mv ~/Library/Application\ Support/pico-8/carts/new.p8 _assets.p8"
alias ped="cd ..; pico-build edit; cd src"

# Homebrew
alias brup="brew -v update && brew upgrade && brew cleanup && brew doctor"

# chunkwm
alias chunki='chunkc tiling::query --desktop windows'
alias chunkid='chunkc tiling::query --window'

# git
alias gb="git branch -a"
alias gc="git checkout"
alias gd="git diff --ignore-all-space"
alias gl="git log"
alias gp="git pull"
alias grm="git ls-files -i --exclude-from=.gitignore | xargs git rm --cached"
alias gs="git status"

alias gpersonal='git config user.email "hellojessemillar@gmail.com"'
alias gwork='git config user.email "jesse.millar@walmartlabs.com"'

# Generate Walmart Labs wallpapers
alias cookie='for file in *; do TIME=$(date +%s) && ~/Documents/Projects/cookie-cutter/cookie-cutter.sh ~/Dropbox/Work/Branding/bolt_pixel@2x.png "$file" ~/Dropbox/Wallpaper/Randomized/$TIME.png 5760 3600; done'

