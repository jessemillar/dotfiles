#!/bin/bash

# specify the absolutepath to the directory to use when loading a plugin. '~' expansion is supported.
chunkc core::plugin_dir ~/.chunkwm_plugins

# if the following is enabled, chunkwm will monitor the specified plugin_dir and automatically reload '.so' plugin files
chunkc core::hotload 1

# the following are config variables for the chunkwm-tiling plugin
chunkc set global_desktop_mode           bsp

chunkc set global_desktop_offset_top     12
chunkc set global_desktop_offset_bottom  12
chunkc set global_desktop_offset_left    12
chunkc set global_desktop_offset_right   12
chunkc set global_desktop_offset_gap     12

chunkc set desktop_padding_step_size     12.0
chunkc set desktop_gap_step_size         6.0

chunkc set bsp_spawn_left                1
chunkc set bsp_optimal_ratio             1.6
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5

chunkc set window_focus_cycle            all
chunkc set mouse_follows_focus           intrinsic
chunkc set window_float_next             0
chunkc set window_float_center           1
chunkc set window_region_locked          1

chunkc set mouse_modifier                fn
chunkc set preselect_border_color        0xffffb86c
chunkc set preselect_border_width        6
chunkc set preselect_border_radius       9

# the following are config variables for the chunkwm-border plugin
chunkc set focused_border_color          0xff8be9fd
chunkc set focused_border_width          6
chunkc set focused_border_radius         9
chunkc set focused_border_skip_floating  1
chunkc set focused_border_outline        1

# specify plugins to load when chunkwm starts
chunkc core::load tiling.so
chunkc core::load border.so

# send certain apps to certain desktops
chunkc tiling::rule --owner Spotify --desktop 7 &
chunkc tiling::rule --owner Messages --desktop 8 &
chunkc tiling::rule --owner Slack --desktop 9 &
chunkc tiling::rule --owner \"Microsoft Outlook\" --except Reminder --desktop 10 &

# shell commands require escaped quotes to pass value containing a whitespace
chunkc tiling::rule --owner DBeaver --except \".+\" --state float &
chunkc tiling::rule --owner DBeaver --name Error --state float &
chunkc tiling::rule --owner Duck --name Duck --state float &
chunkc tiling::rule --owner Finder --name Copy --state float &
chunkc tiling::rule --owner Gifox --state float &
chunkc tiling::rule --owner Jabber --name \"Cisco Jabber\" --state float &
chunkc tiling::rule --owner LÃ–VE --state float &
chunkc tiling::rule --owner qemu-system-x86_64 --state float &
chunkc tiling::rule --owner \"Archive Utility\" --state float &
chunkc tiling::rule --owner \"Cisco AnyConnect Secure Mobility Client\" --state float &
chunkc tiling::rule --owner \"Cisco WebEx Meeting Center\" --subrole AXStandardWindow --state tile &
chunkc tiling::rule --owner \"GIPHY CAPTURE\" --state float &
chunkc tiling::rule --owner \"IntelliJ IDEA\" --name Delete --state float &
chunkc tiling::rule --owner \"IntelliJ IDEA\" --name \"Generate equals\(\) and hashCode\(\)\" --state float &
chunkc tiling::rule --owner \"IntelliJ IDEA\" --name Rename --state float &
chunkc tiling::rule --owner \"Microsoft Outlook\" --name Reminder --state float &
chunkc tiling::rule --owner \"System Preferences\" --state float &
