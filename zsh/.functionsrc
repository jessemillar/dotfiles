# Find disk usage by directory
function usage() {
	dir="$1"

	if [[ $# -eq 0 || "$dir" = "." ]]
	then
		dir="$(pwd)"
	fi

	reverb "Total disk usage"
	df -h /
	reverb "Disk usage of $dir"
	sudo du -cha --max-depth=1 "$dir" | sort -rh | grep -E "M\s|G\s|K\s"
}

