let configpath = "/Users/jessemillar/.cvimrc"
set localconfig

set noautofocus
set nosmoothscroll
set typelinkhints

let searchalias g = "google"
let mapleader = "\\"
let typelinkhintsdelay = "0"
let hintcharacters = "fdsawerjkiop"

map : openCommandBar
map <C-b> scrollFullPageUp
map <C-f> scrollFullPageDown
map F createActiveTabbedHint
map f createHint
map p openPasteTab
map P openPaste

map S :open google<Space>
map s :tabopen google<Space>
map i goToInput
map u lastClosedTab
map <C-z> toggleCvim

map <Leader>b :tabopen bookmarks<Space>
map <Leader>ex :tabopen chrome://extensions<CR>
map <Leader>d :tabdetach<CR>

site "https://mail.google.com/*" {
    unmapAll
}

site "https://www.piskelapp.com/*" {
    unmapAll
}

site "https://felipemanga.github.io/ProjectABE/*" {
    unmapAll
}

site "http://jessemillar.com/the-staff-of-lewis/*" {
    unmapAll
}

site "file://*" {
    unmapAll
}

copyCurrentTabAddress -> {{
	Status.setMessage(document.location.href,3);
	Clipboard.copy(document.location.href);
}}

map yt :call copyCurrentTabAddress<CR>
