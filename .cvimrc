let configpath = "/Users/jessemillar/.cvimrc"
set localconfig

set noautofocus
set nosmoothscroll
set typelinkhints

let mapleader = "\\"
let hintcharacters = "fdsawerjkiop"
let typelinkhintsdelay = "0"
let searchalias g = "google"

map : openCommandBar

map a :tabattach 1
map d :tabdetach<CR>
map i goToInput
map F createActiveTabbedHint
map f createHint
map P openPaste
map p openPasteTab
map S :open google<Space>
map s :tabopen google<Space>
map u lastClosedTab

map <C-b> scrollFullPageUp
map <C-f> scrollFullPageDown
map <C-z> toggleCvim

map <Leader>ex :tabopen chrome://extensions<CR>

copyCurrentTabAddress -> {{
	Status.setMessage(document.location.href,3);
	Clipboard.copy(document.location.href);
}}

map yt :call copyCurrentTabAddress<CR>

